PROG	= pipex

SRCS 	= srcs/pipex.c srcs/utils.c srcs/errors.c
OBJS 	= ${SRCS:.c=.o}
MAIN	= srcs/pipex.c

HEADER	= -Iincludes

CC 		= cc
CFLAGS 	= -Wall -Wextra -Werror -g


all: 		${PROG}

${PROG}:	${SRCS}
					@make -C ./libft
					@$(CC) ${SRCS} ${CFLAGS} ${HEADER} -Llibft -lft -o ${PROG}
					$(MAKE) yolo

clean:
					@make clean -C ./libft 


fclean: clean
					@make fclean -C ./libft 
					@rm -f $(PROG)

re:			fclean all

yolo:
	@clear
	@echo	'⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⢀⠀⠠'
